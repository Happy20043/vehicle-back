<!DOCTYPE html>
<html lang="en">
  <%- include("../partial/head", { title: title }) %>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Categories</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50 text-gray-800">
    <%- include("../partial/sidebar") %>
    <div class="ml-0 md:ml-64 flex flex-col min-h-screen">
      <!-- Header -->
      <%- include("../partial/header") %>
      <main class="p-10 mt-5 flex-1">
        <div class="flex justify-between items-center mb-4">
          <h1 class="text-4xl font-extrabold text-gray-800">Blogs</h1>
          <a
            href="/admin/blogs/create"
            class="bg-blue-500 text-white px-6 py-3 rounded-lg shadow-lg hover:bg-blue-700 transition duration-300 transform hover:scale-105"
          >
            Create New Blog
          </a>
        </div>

        <!-- Table -->
        <div class="overflow-x-auto">
          <div class="bg-white shadow-lg rounded-lg p-4 border border-gray-200">
            <table class="min-w-full table-auto border-collapse text-gray-700">
              <thead class="bg-gradient-to-r from-blue-900 to-black text-white">
                <tr>
                  <th scope="col" class="px-6 py-4 text-left text-sm font-semibold border-b-2 border-gray-300">#</th>
                  <th scope="col" class="px-6 py-4 text-left text-sm font-semibold border-b-2 border-gray-300">Title</th>
                  <th scope="col" class="px-6 py-4 text-left text-sm font-semibold border-b-2 border-gray-300">Category</th>
                  <th scope="col" class="px-6 py-4 text-left text-sm font-semibold border-b-2 border-gray-300">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (blogs.length > 0) { %>
                  <% blogs.forEach(blog => { %>
                    <tr class="hover:bg-gradient-to-r from-gray-100 to-gray-50 transition duration-300 ease-in-out">
                      <td class="px-6 py-4 text-lg font-medium border-b border-gray-300">
                        <%= blog.id %>
                      </td>
                      <td class="px-6 py-4 text-lg font-medium border-b border-gray-300">
                        <%= blog.title %>
                      </td>
                      <td class="px-6 py-4 text-lg font-medium border-b border-gray-300">
                        <%= blog?.category?.name %>
                      </td>
                      <td class="px-6 py-4 text-lg font-medium border-b border-gray-300">
                        <div class="flex space-x-4">
                          <!-- Edit Button -->
                          <a href="/admin/blogs/<%= blog.id %>/edit"  class="text-white bg-gradient-to-r from-green-400 to-green-600 hover:from-green-600 hover:to-green-400 px-4 py-2 rounded-lg flex items-center space-x-2 transition-all duration-200 transform hover:scale-105 shadow-md">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 3.487a2.25 2.25 0 013.182 3.182L7.557 19.156a4.5 4.5 0 01-1.689 1.01l-4.124 1.375 1.375-4.124a4.5 4.5 0 011.01-1.689L16.862 3.487z" />
                              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 9L15 4.5" />
                            </svg>
                            <span>Edit</span>
                          </a>
            
                          <!-- Delete Button -->
                          <button type="button" onclick="openConfirmationModal('<%= blog.id %>', '<%= blog.title %>')" class="text-white bg-gradient-to-r from-red-400 to-red-600 hover:from-red-600 hover:to-red-400 px-4 py-2 rounded-lg flex items-center space-x-2 transition-all duration-200 transform hover:scale-105 shadow-md">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M9 13.5V10.5m3 3v-3m3 3v-3m-4.5 9h3c.621 0 1.19-.384 1.382-.944L15.62 4.5H8.379l-.62 16.056c.192.56.76.944 1.381.944z" />
                              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 4.5l-1.5 18H6L4.5 4.5" />
                            </svg>
                            <span>Delete</span>
                          </button>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                <% } else { %>
                  <tr>
                    <td colspan="4" class="text-center py-4 text-gray-500">
                      No blogs available.
                      <a href="/admin/blogs/create" class="text-blue-500 hover:underline">Create one now</a>.
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
            
          </div>
        </div>
      </main> 
    </div>

    <!-- Confirmation Modal -->

    <div
    id="confirmationModal"
    class="fixed inset-0 bg-gray-800 bg-opacity-50 flex items-center justify-center hidden"
  >
    <div class="bg-white p-6 rounded-lg w-1/3">
      <h3 class="text-xl font-semibold mb-4">Confirm Deletion</h3>
      <p id="confirmationMessage" class="mb-4">
        Are you sure you want to delete this category?
      </p>
      <div class="flex justify-end space-x-3">
        <button
          onclick="closeConfirmationModal()"
          class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600"
        >
          Cancel
        </button>
        <form id="deleteForm" method="POST" style="display: inline">
          <button
            type="submit"
            class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700"
          >
            Delete
          </button>
        </form>
      </div>
    </div>
  </div>
     
    <script>
      let currentBlogId = "";

      // Open the confirmation modal
      function openConfirmationModal(blogId, blogTitle) {
        currentBlogId = blogId;
        document.getElementById(
          "confirmationMessage"
        ).textContent = `Are you sure you want to delete the blog: ${blogTitle}?`;
        document.getElementById(
          "deleteForm"
        ).action = `/admin/blogs/${blogId}/delete`;
        document.getElementById("confirmationModal").classList.remove("hidden");
      }

      // Close the confirmation modal
      function closeConfirmationModal() {
        document.getElementById("confirmationModal").classList.add("hidden");
      }
    </script>
  </body>
</html>
