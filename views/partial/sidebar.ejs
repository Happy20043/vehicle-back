<script>
  // Add active class to the current link based on the page URL or other logic
  document.addEventListener("DOMContentLoaded", function () {
    const url = window.location.pathname;
    const links = {
      "/admin": document.getElementById("dashboard-link"),
      "/admin/logout": document.getElementById("logout-link"),
    };

    // Function to remove active class from all links
    function removeAllActive() {
      Object.values(links).forEach((link) => {
        link.classList.remove("bg-gray-700");
      });
    }

    // Add active class to the current link
    if (links[url]) {
      removeAllActive();
      links[url].classList.add("bg-gray-700");
    }
  });
</script>
